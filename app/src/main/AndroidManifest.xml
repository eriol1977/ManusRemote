<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fb.manusremote" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".view.Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- INTERCOMS -->
        <activity
            android:name=".intercom.view.Intercoms"
            android:label="@string/title_activity_intercoms"
            android:parentActivityName=".view.Main"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.Main" />
        </activity>
        <activity
            android:name=".intercom.view.IntercomConfig"
            android:label="@string/title_activity_intercom_config"
            android:parentActivityName=".intercom.view.Intercoms"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.AppCompat.Light"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".intercom.view.Intercoms" />
        </activity>
        <activity
            android:name=".intercom.view.IntercomCreate"
            android:label="@string/title_activity_intercom_create"
            android:parentActivityName=".intercom.view.Intercoms"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".intercom.view.Intercoms" />
        </activity>
        <activity
            android:name=".intercom.view.IntercomRemote"
            android:label="@string/title_activity_intercom_remote"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName=".intercom.view.IntercomConfig"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".intercom.view.IntercomConfig" />
        </activity>
        <!-- CAMERAS -->
        <activity
            android:name=".camera.view.Cameras"
            android:label="@string/title_activity_cameras"
            android:parentActivityName=".view.Main"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.Main" />
        </activity>
        <activity
            android:name=".camera.view.CameraConfig"
            android:label="@string/title_activity_camera_config"
            android:parentActivityName=".camera.view.Cameras"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.AppCompat.Light"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".camera.view.Cameras" />
        </activity>
        <activity
            android:name=".camera.view.CameraCreate"
            android:label="@string/title_activity_camera_create"
            android:parentActivityName=".camera.view.Cameras"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".camera.view.Cameras" />
        </activity>
        <activity
            android:name=".camera.view.CameraRemote"
            android:label="@string/title_activity_camera_remote"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName=".camera.view.CameraConfig"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".camera.view.CameraConfig" />
        </activity>
    </application>

</manifest>
